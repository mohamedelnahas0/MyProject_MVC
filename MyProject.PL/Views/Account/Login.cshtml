 @model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Autlayout.cshtml";
}

<div asp-validation-summary="All"></div>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login" method="post">
			
			<input class="text" asp-for="Email" placeholder=" Your Email" required="">
			<span asp-validation-for="Email" class="text-danger"></span>
			<br />

			<input class="text" asp-for="Password" placeholder=" Your Password" required="">
			<span asp-validation-for="Password" class="text-danger"></span>
			<br />
		
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="Rememberme" class="checkbox" required="">
					<span>Rememberme</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>Don't' have an Account? <a asp-action="SignUp"> SignUp Now!</a></p>
	</div>
</div>

@section ValidationScriptsSections {
	<partial name="_ValidationScriptsPartial" />
}

