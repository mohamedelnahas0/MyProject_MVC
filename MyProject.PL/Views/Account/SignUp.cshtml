@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Autlayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SignUp" method="post">
			<input class="text"  asp-for="Fname" placeholder=" Your Firt name" required="">
			<span  asp-validation-for="Fname" class="text-danger"></span>
			<br />
			<input class="text" asp-for="Lname" placeholder=" Your Last name" required="">
			<span asp-validation-for="Lname" class="text-danger"></span>
			<br />
			<input class="text" asp-for="Email" placeholder=" Your Email" required="">
			<span asp-validation-for="Email" class="text-danger"></span>
			<br />

			<input class="text" asp-for="Password" placeholder=" Your Password" required="">
			<span asp-validation-for="Password" class="text-danger"></span>	
			<br />
			<input class="text" asp-for="ConfirmPassword" placeholder=" Please ConfirmPassword" required="">
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="IsAgree" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Do have an Account? <a asp-action="SignIn"> Login Now!</a></p>
	</div>
</div> 

@section ValidationScriptsSections {
	<partial name="_ValidationScriptsPartial" />
}