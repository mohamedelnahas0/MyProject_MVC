@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_Autlayout.cshtml";
}

<div asp-validation-summary="All"></div>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SendEmail">

			<input class="text" asp-for="Email" placeholder=" Your Email" required="">
			<span asp-validation-for="Email" class="text-danger"></span>
			<br />
			<input type="submit" value="Reset Password">
		</form>
	</div>
</div>

@section ValidationScriptsSections {
	<partial name="_ValidationScriptsPartial" />
}


